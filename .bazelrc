# Use Bzlmod for external dependency management.
common --enable_bzlmod

# Enable modern C++ toolchain resolution.
build --incompatible_enable_cc_toolchain_resolution

# Define a config for arm64 builds.
# Usage: bazel build --config=arm64 //...
build:arm64 --platforms=//platforms:linux_arm64

# Verbose output for failures is useful for debugging.
build --verbose_failures